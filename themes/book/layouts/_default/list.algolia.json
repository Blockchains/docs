{{/* Generates a valid Algolia search index */}}
{{- $.Scratch.Add "index" slice -}}
{{- $section := $.Site.GetPage "section" (.Section | humanize | title ) }}
{{- range .Site.AllPages -}}
  {{- if or (and (.IsDescendant $section) (and (not .Draft) (not .Params.private))) $section.IsHome -}}
    {{- $.Scratch.Add "index" (dict "objectID" .UniqueID "content" .Plain "date" .Date.UTC.Unix "dir" .Dir "kind" .Kind "lang" .Lang "lastmod" .Lastmod.UTC.Unix "permalink" .Permalink "relpermalink" .RelPermalink "title" .Title "type" .Type "url" .URL "weight" .Weight "section" .Section "categories" .Params.Categories )}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}